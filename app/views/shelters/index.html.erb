<div class="container">

  <div class="row justify-content-center my-3">
    <div class="col-md">
      <h1>Shelters</h1>
    </div>
    <div class="justify-content-end">
      <%= form_tag shelters_path, method: :get, class: "form-inline my-2 my-lg-2" do %>
      <%= text_field_tag(
        :search,
        params[:search],
        placeholder: "Search",
        class: "form-control mr-sm-2"
          ) %>
          <%= button_tag "Search", class: "btn btn-outline-success my-2 my-sm-0" %>
          <% end %>
    </div>
  </div>

  <br>

  <div class="row">
    <% @shelters.each do |shelter| %>
      <div class="col">
        <a href="<%= shelter_path(shelter) %>">
          <%= image_tag shelter.avatar.url(:medium) %><br>
        </a>
        <%= link_to shelter.name, shelter_path(shelter) %>
      </div>
    <% end %>
  </div>


</div>
