<%= stylesheet_link_tag "application" %>

<div class="container">

  <div class="row justify-content-center">
    <% @shelter.errors.any? do %>
    <h2>
      <%= pluralize(@shelter.errors.count, "error") %>
      prohibited this post from being saved:
    </h2>

    <div class="notice bg-warning"><ul>
      <% @shelter.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
      <% end %>
    </ul></div>
    <% end %>
  </div>

  <div class="row justify-content-center">
    <%= form_for setup_user(@shelter) do |f| %>

    <% if @shelter.avatar.exists? %>
      <%= image_tag @shelter.avatar.url(:medium) %><br/><br>
    <% end %>

      <h5><%= f.label :avatar, "Add a lovely picture here" %></h5>
      <%= f.file_field :avatar, class: "btn btn-outline-info" %>
      <br>
      <%= f.check_box :delete_avatar %>Delete Image<br/><br>

      <%= f.label :name, class: "heading" %>
      <%= f.text_field :name %>
      <br>
      <%= f.label :description, class: "heading" %>
      <%= f.text_area :description %>
      <br>
      <%= f.label :website, class: "heading" %>
      <%= f.url_field :website %>
      <br>
      <%= f.label :email_address, class: "heading" %>
      <%= f.email_field :email_address %>
      <br>
      <%= f.label :telephone_number, class: "heading" %>
      <%= f.telephone_field :telephone_number %>
      <br><br>

      <h6 class="heading">Address</h6>
      <%= f.fields_for :locations do |loc| %>
        <%= loc.label :street_address %>
        <%= loc.text_field :street_address, value: @shelter.location.street_address %>
        <br>
        <%= loc.label :city %>
        <%= loc.text_field :city, value: @shelter.location.city %>
        <br>
        <%= loc.label :state %>
        <%= loc.collection_select :state, Location.states, :name, :code, {:selected => @shelter.location.state} %>
        <br>
        <%= loc.label :country %>
        <%= loc.collection_select :country, Carmen::Country.all, :name, :name, {:selected => @shelter.location.country} %>
        <br>
      <% end %><br>

        <br>

      <%= f.submit "Create Shelter", class: "btn btn-outline-success" %>
    <% end %>
  </div>
</div>
