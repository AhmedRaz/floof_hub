<h1>Login to Adopt Today!</h1>
<% if flash[:notice] %>
    <div class="notice bg-warning"><span class="text-danger">x </span><%= flash[:notice] %></div>
<% end %>

<%= form_for :sessions, url: '/login' do |f| %>
    <%= f.label :email_address %>
    <%= f.text_field :email_address %>
    <br>
    <%= f.label :password %>
    <%= f.password_field :password %>
    <br>
    <%= f.submit "Click to login" %>
<% end %>
