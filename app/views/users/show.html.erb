<h1><%= @user.name %></h1>

<%= image_tag @user.avatar.url(:thumb) %>

<p>Address:</p>
<p><%= @user.location.street_address %></p>
<p><%= @user.location.city %></p>
<p><%= @user.location.state %></p>
<p>Dwelling Type: <%= @user.dwelling_type%></p>
<br>
<p>Age: <%= @user.age %></p>

  <% if @user.kids == true %>
  <p>Kids:
    <%= "Yes" %>
  </p>
  <% end %>

  <% if @user.shelter_employee == true %>
  <p>Shelter Employee:
    <%= "Yes" %>
    <% if @user.employer_id != nil %>
    <p>Shelter: <%= @user.employer.name %></p>
    <% end %>
  </p>
  <% end %>



<p>Household Members: <%= @user.household_members %></p>
<p>Bio: <%= @user.bio %></p>
<p>Email: <%= @user.email_address %></p>

<br><br>
<%= link_to "Edit Profile", edit_user_path(@user) %>
