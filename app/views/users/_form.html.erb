<%= form_for @user do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <br>
  <%= f.label :age %>
  <%= f.number_field :age %>
  <br>
  <%= f.label :dwelling_type %>
  <%= f.text_field :dwelling_type %>
  <br>
  <%= f.label :household_members %>
  <%= f.number_field :household_members %>
  <br>
  <%= f.label :bio %>
  <%= f.text_area :bio %>
  <br>
  <%= f.label :kids %>
  <%= f.check_box :kids %>
  <br>
  <br>
  <%= f.fields_for :locations do |loc| %>
    <%= loc.label :street_address %>
    <%= loc.text_field :street_address %>
    <br>
    <%= loc.label :city %>
    <%= loc.text_field :city %>
    <br>
    <%= loc.label :state %>
    <%= loc.text_field :state %>
    <br>
    <%= loc.label :country %>
    <%= loc.text_field :country %>
  <% end %>
  <br><br>
  <%= f.label :email_address %>
  <%= f.email_field :email_address %>
  <br>
  <%= f.label :password %>
  <%= f.password_field :password %>
  <br>
  <br>
  <%= f.label :shelter_employee %>
  <%= f.check_box :shelter_employee %>
  <br>
  <br>
  <%= f.submit "Register Here"%>
<% end %>
