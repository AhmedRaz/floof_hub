<h1>ALL THE PETS IN DA WORLD</h1>

<%= form_tag pets_path, method: :get, class: "form-inline my-2 my-lg-2" do %>
  <%= text_field_tag(
      :search,
      params[:search],
      placeholder: "Search",
      class: "form-control mr-sm-2"
  ) %>
  <%= button_tag "Search", class: "btn btn-outline-success my-2 my-sm-0" %>
<% end %>
<br>
<ul>
  <% @pets.each do |pet| %>
  <li><%= link_to pet.name, pet_path(pet) %></li>
  <% end %>
</ul>
