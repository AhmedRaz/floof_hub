

<div class="container">
  <div class="row justify-content-start">
<!-- FIRST COLUMN AREA FOR PET NAME AND PICTURE -->
    <div class="col-5 my-3">
        <h1><%= @pet.name.capitalize %></h1>
        <%= image_tag @pet.avatar.url(:medium) %><br><br>
        <% if current_user.employer_id == @pet.shelter_id%>
          <h4><%= link_to "Edit Profile", edit_pet_path(@pet) %><h4>
        <% end %>
    </div>
<!-- MIDDLE COLUMN FOR PET DETAILS -->
    <div class="col-5 my-3">
        <h4 >Age: </h4>
        <h6><%= @pet.age%></h6>
        <br>
        <h4>Gender:</h4>
        <h6>
          <%= @pet.gender %></p>
        </h6>
        <br>
        <h4>Bio:</h4>
        <h6>
          <%= @pet.bio %>
        </h6>
        <br>
        <h4>Breed:</h4>
        <h6>
          <%= @pet.breed %>
        </h6>
        <br>
        <h4>Temperament:</h4>
        <h6>
          <%= @pet.temperament %>
        </h6>
    </div>
<!-- RIGHT COLUMN FOR LINKS FOR OTHER ACTIONS -->
    <div class="col-2 my-3">
    </div>
<!-- END OF CONTAINER -->
  </div>
</div>
