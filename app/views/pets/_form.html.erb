<%= form_for @pet, html: { multipart: true } do |f| %>

  <%= f.file_field :avatar %>
  <br><br>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <br>
    <%= f.label :age %>
    <%= f.number_field :age %>
    <br>
    <%= f.label :gender %>
    Male <%= f.radio_button(:gender, "M", :checked => (@pet.gender == "M")) %>
    Female <%= f.radio_button(:gender, "F", :checked => (@pet.gender == "F")) %>
    <br>
    <%= f.label :bio %>
    <%= f.text_area :bio %>
    <br>
    <%= f.label :pet_type %>
    <%= f.text_field :pet_type %>
    <br>
    <%= f.label :breed %>
    <%= f.text_field :breed %>
    <br>
    <%= f.label :temperament %>
    <%= f.text_field :temperament %>
    <br>
    <%= f.label :single_pet, "Loner pet?" %>
    Yes <%= f.radio_button(:single_pet, true, :checked => (@pet.single_pet == true)) %>
    No <%= f.radio_button(:single_pet, false, :checked => (@pet.single_pet == false)) %>
    <br>
    <%= f.label :family_friendly %>
    Yes <%= f.radio_button(:family_friendly, true, :checked => (@pet.family_friendly == true)) %>
    No <%= f.radio_button(:family_friendly, false, :checked => (@pet.family_friendly == false)) %>
    <br>
    <%= f.label :shelter_id, "Shelter" %>
    <%= f.collection_select :shelter_id, Shelter.all, :id, :name %>
    <br><br>
    <%= f.submit %>
<% end %>
